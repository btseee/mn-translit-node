{
  "compilerOptions": {
    "target": "ES2015",                          
    "module": "commonjs",                         
    "lib": ["ES2015"],                           
    "declaration": true,                         
    "declarationMap": true,                       
    "sourceMap": true,                           
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",                  
    "resolveJsonModule": true,                  
    "downlevelIteration": true,                   
    "noEmitOnError": true                         
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "examples"]
}
